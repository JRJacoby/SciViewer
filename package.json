{
  "name": "sci-viewer",
  "displayName": "SciViewer",
  "description": "View scientific data files (HDF5, pickle, etc.) in VS Code",
  "version": "0.1.0",
  "publisher": "jrdja",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrdja/vscviewer"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Data Science",
    "Other"
  ],
  "keywords": [
    "hdf5",
    "h5",
    "scientific",
    "data",
    "viewer",
    "numpy",
    "hierarchical"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "sciViewer.h5",
        "displayName": "HDF5 Viewer",
        "selector": [
          { "filenamePattern": "*.h5" },
          { "filenamePattern": "*.hdf5" }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "SciViewer",
      "properties": {
        "sciViewer.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Path to Python interpreter. Leave empty to auto-detect (python3 on Unix, python on Windows)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
